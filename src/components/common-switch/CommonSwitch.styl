@import '@css/variables.styl'

.common-switch
  display: inline-flex
  align-items: center
  &.track
    width: 36px
    height: 22px
    cursor: pointer
    border-radius: 60px
    background-color: $tertiary
    &.active
      background-color: $blue-main
      .thumb
        margin-left: auto
        margin-right: 4px
        background-color: $white
  .thumb
    width: 14px
    height: 14px
    margin-left: 4px
    border-radius: 50%
    align-items: center
    display: inline-flex
    justify-content: center
    background-color: $white